@model IEnumerable<CalendarioGerarOrg.Models.feriado>

@{
    ViewData["Title"] = "List";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idcidadeNavigation.nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.dia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.idcidadeNavigation.nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.idferiado">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.idferiado">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.idferiado">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
